@model ExpenseTrackerEntity.Models.Category;
<div class="modal fade" id="category" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-center align-items-center">
                <p class="fs-2">Edit your Category</p>
            </div>
            <form method="post" asp-action="EditCategory" class="mx-1 mx-md-4 p-4">


                <input type="text" asp-for="CategoryId" hidden/>
                <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <input asp-for="Name" type="text" id="form3Example3c" class="form-control" />
                        <label class="form-label" for="form3Example3c">Edit your category name</label>
                    </div>
                </div>

                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg">Edit</button>
                </div>

            </form>
        </div>
    </div>
</div>