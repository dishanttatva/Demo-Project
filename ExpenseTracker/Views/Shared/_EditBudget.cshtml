@model ExpenseTrackerEntity.ViewModel.BudgetVM;

<div class="modal fade" id="budget" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-center align-items-center">
                <p class="fs-2">Edit a Expense</p>
            </div>
            <form method="post" asp-action="EditBudget" class="mx-1 mx-md-4 p-4">

                <input type="text" asp-for="BudgetID" hidden />
                <div class="d-flex flex-row align-items-center mb-4">
                    @{
                        var value = "";
                    }
                    @if (Model.BudgetType == 1)
                    {
                        value = "CategoryWise";
                    }
                    else if(Model.BudgetType==2)
                    {
                        value = "TimeSpanWise";
                    }
                    else
                    {
                        value = "Both";
                    }
                    <div class="form-outline flex-fill mb-0">
                        <input  type="text" value="@value" id="form3Example3c" class="form-control" disabled/>
                        <label class="form-label" for="form3Example3c">Enter your Budget type</label>
                    </div>
                </div>
                @if (Model.BudgetType == 1 || Model.BudgetType==3)
                {
                    <div class="d-flex flex-row align-items-center mb-4">

                        <div class="form-outline flex-fill mb-0">
                            <select class="form-select" asp-for="Category_Id" aria-label="Default select example">


                                
                                    @foreach (var item in Model.Categories)
                                    {
                                        <option value="@item.CategoryId">@item.Name</option>
                                    
                                }



                            </select>
                            <label class="form-label">select your category</label><br />
                            <span asp-validation-for="Category_Id" class="text-danger"></span>
                        </div>
                    </div>
                }
                @if(Model.BudgetType==2 || Model.BudgetType==3)
                {
                    <div class="d-flex flex-row align-items-center mb-4">

                        <div class="form-outline flex-fill mb-0">
                            <select class="form-select" asp-for="Freequency_Type" aria-label="Default select example">
                                @foreach(var item in Model.Freequencies)
                                {
                                    <option value="@item.FreequencyId">@item.Name</option>
                                }
                            </select>
                            <label class="form-label">select your Freequency</label><br />
                            <span asp-validation-for="Freequency_Type" class="text-danger"></span>

                        </div>
                    </div>
                }

              

                <div class="d-flex flex-row align-items-center mb-4">

                    <div class="form-outline flex-fill mb-0">
                        <input asp-for="BudgetAmount" type="text" id="form3Example3c" class="form-control" />
                        <label class="form-label" for="form3Example3c">Enter your Expense Amount</label><br />
                        <span asp-validation-for="BudgetAmount" class="text-danger"></span>

                    </div>
                </div>

               

                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg">Edit</button>
                </div>



            </form>
        </div>
    </div>
</div>
