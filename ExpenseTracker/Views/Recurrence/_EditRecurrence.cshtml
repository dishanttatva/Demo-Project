@model ExpenseTrackerEntity.ViewModel.HomeVM;

<div class="modal fade" id="recurrence" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-center align-items-center">
                <p class="fs-2">Edit a Expense</p>
            </div>
            <form method="post" asp-action="EditRecurrence" class="mx-1 mx-md-4 p-4">

                <input type="text" asp-for="RecurrenceId" hidden />
                <div class="d-flex flex-row align-items-center mb-4">

                    <div class="form-outline flex-fill mb-0">
                        <input asp-for="ExpenseName" type="text" id="form3Example3c" class="form-control" />
                        <label class="form-label" for="form3Example3c">Enter your Expense name</label>
                    </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">

                    <div class="form-outline flex-fill mb-0">
                        <select class="form-select" asp-for="FrequencyId" aria-label="Default select example">


                            @if (Model != null)
                            {
                               <option value="1">Daily</option>
                               <option value="2">Weekly</option>
                               <option value="3">Monthly</option>
                            }



                        </select>
                        <label class="form-label">select recurrence Freequency</label>
                    </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">

                    <div class="form-outline flex-fill mb-0">
                        <input asp-for="ExpenseDate" type="date" asp-format="{0:yyyy-MM-dd}" id="form3Example3c" class="form-control" />
                        <label class="form-label" for="form3Example3c">Enter your Recurrence Date</label>
                    </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">

                    <div class="form-outline flex-fill mb-0">
                        <input asp-for="Amount" type="text" id="form3Example3c" class="form-control" />
                        <label class="form-label" for="form3Example3c">Enter your Recurrence Amount</label>
                    </div>
                </div>

                

                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg">Edit</button>
                </div>



            </form>
        </div>
    </div>
</div>
